<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#e7e7db"
    android:scrollbars="vertical">

    <!-- Header med bild -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/gamebackground" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">


            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#87875549"
                android:text="Grupper"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/groupDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#56956556"
                android:text="Grupper som behöver medlemmar"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:iconifiedByDefault="false"
        android:queryHint="Sök efter grupper..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="534dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Grupp 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginBottom="16dp"
            android:background="#B3B3A7"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/group1Button"
                android:layout_width="111dp"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:background="#947373"
                android:gravity="center"
                android:padding="16dp"
                android:text="Dungeons & Dragons"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/group1Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Vi söker en tank och en healer för vårt DnD-kampanj."
                android:textColor="#000000" />

            <TextView
                android:id="@+id/group1Members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Members: 3"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Grupp 2  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginBottom="16dp"
            android:background="#B3B3A7"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/group2Button"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:background="#85735E"
                android:gravity="center"
                android:onClick="onGroupButtonClick"
                android:padding="16dp"
                android:text="Elden Ring"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/group2Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Sökes: En tank som kan ta Malenia, Blade of Miquella's uppmärksamhet"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/group2Members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Members: 2"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Grupp 3  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#B3B3A7"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/group2Button"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginBottom="8dp"

                android:background="#D15454"
                android:gravity="center"
                android:onClick="onGroupButtonClick"
                android:padding="16dp"
                android:text="Valorant"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/group2Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Letar efter en duellist, en controller och en healer för att fylla vår 5man på Valorant"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/group2Members"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Members: 2"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Grupp 4  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginBottom="16dp"
            android:background="#B3B3A7"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/group2Button"
                android:layout_width="114dp"
                android:layout_height="75dp"
                android:layout_marginBottom="8dp"
                android:background="#5E7985"
                android:gravity="center"
                android:onClick="onGroupButtonClick"
                android:padding="16dp"
                android:text="Cyberpunk 2077"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/group2Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/group2Members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Members: 2"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Gå med grupp -->
    <Button
        android:id="@+id/joinButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#58807c"
        android:text="Gå med i grupp" />

